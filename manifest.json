{
  "name": "Tripadifai",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Chrome extension to search Trip Advisor by image with Clarifai",
  "homepage_url": "http://github.com/cassidoo/tripadifai",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "https://*/*",
    "http://*/*"
  ]
}
